package pack1;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.Select;

public class Add_event {
	
	static WebDriver driver;
	public static void event(WebDriver driver)
	{
	
		WebElement calender;
		calender = driver.findElement(By.xpath("/html/body/div[1]/nav/div[1]/div/div[3]/ul/li[2]/div/a"));
		calender.click();
		
		
		WebElement addevent;
		addevent = driver.findElement(By.xpath("//*[@id=\"calendarview_basicaction_addevent\"]"));
		addevent.click();
		
		WebElement subject;
		subject = driver.findElement(By.xpath("//*[@id=\"Contacts_editView_fieldName_lastname\"]"));
		subject.sendKeys("call someone");
		
		Select assignedto = new Select(driver.findElement(By.xpath("/html/body/div[5]/div[2]/div/form/div[2]/div/div[1]/div/table/tbody/tr[1]/td[4]/select")));
	    assignedto.selectByVisibleText("Support Group");
	    
	    Select status = new Select(driver.findElement(By.xpath("/html/body/div[5]/div[2]/div/form/div[2]/div/div[1]/div/table/tbody/tr[1]/td[4]/select")));
	    status.selectByVisibleText("Held");
	    
	    Select activity = new Select(driver.findElement(By.xpath("/html/body/div[5]/div[2]/div/form/div[2]/div/div[1]/div/table/tbody/tr[1]/td[4]/select")));
	    activity.selectByVisibleText("Meeting");
	    
	    WebElement save;
	    save = driver.findElement(By.xpath("/html/body/div[5]/div[2]/div/form/div[3]/center/button[2]"));
        save.submit();
	    
	    
	    
		
	}

}
